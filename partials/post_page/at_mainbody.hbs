<div id="at_mainbody" class="at_post" role="main">
    <div class="row">
        <div class="large-12 columns">
            {{#post}}
            <div class="at_block">
                <article class="{{post_class}}">
                  <div class="at_post_content">
                      {{content}}
                  </div>

                  <div class="at_post_comments">
                      {{> widgets/at_disqus }}
                  </div>
                </article>
            </div>
            {{/post}}
        </div>
    </div>
</div>
